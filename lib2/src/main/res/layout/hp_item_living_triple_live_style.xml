<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_living_triple_live_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/triple_container_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <View
        android:id="@+id/triple_divider_left"
        android:layout_width="2dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/triple_container_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <View
        android:id="@+id/triple_divider_right"
        android:layout_width="2dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/triple_container_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>