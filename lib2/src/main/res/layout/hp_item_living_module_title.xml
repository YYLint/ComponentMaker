<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_living_title_container"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/live_title_decoration"
        android:layout_width="8dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txt_living_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/live_title_decoration"
        android:maxLines="1"
        android:paddingLeft="2dp"
        android:text="测试123"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_living_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />

    <View
        android:id="@+id/living_module_seperator"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#ffe0e0e0"
        android:visibility="gone" />
</RelativeLayout>
